<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>My blog</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <%- include("partials/navbar.ejs") %>
            <h1>
                <%- post['title'] %>
            </h1>
            <p>by
                <%- post['userName'] %>
            </p>
            <p>
                <%- post['body'] %>
            </p>
            <h2>Comments:</h2>
            <ul>
                <% comm.forEach((comms) =>{ %>
                    <%- include("partials/commentCard.ejs", {comms}) %>

                        <% }) %>
            </ul>

            <h2>Leave comment:</h2>

            <form action="/posts/<%- post['id'] %>" method="post">

                <div class="form-group row">

                    <div class="col" style="margin-left: 32px;">

                        <textarea name="comment" class="form-control w-100" id="comment" rows="3" required></textarea>
                    </div>

                </div>

                <button class="btn btn-primary mt-3" type="submit">Send</button>
            </form>

    </div>
    <script src="/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>